<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ru.netology.statsview.ui.StatsView
        android:id="@+id/statsView"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:textSize="40sp"
        app:lineWidth="16dp"
        app:color1="#6027E6"
        app:color2="#19D7C3"
        app:color3="#FDDA39"
        app:color4="#FC1966"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/statsView2"/>

    <ru.netology.statsview.ui.StatsViewNotFilled
        android:id="@+id/statsView2"
        android:layout_width="300dp"
        android:layout_height="300dp"
        app:textSize="40sp"
        app:lineWidth="16dp"
        app:color1="#6027E6"
        app:color2="#19D7C3"
        app:color3="#FDDA39"
        app:color4="#FC1966"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/statsView"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>